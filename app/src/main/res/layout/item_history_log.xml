<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="14dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="10dp"
    android:backgroundTint="#F8FAFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/logDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-06-12"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/primaryBackground"
            android:drawableLeft="@android:drawable/ic_menu_today"
            android:drawablePadding="6dp"/>

        <TextView
            android:id="@+id/logWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mindful Walking"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/primaryBackground"
            android:layout_marginTop="6dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/logDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 min"
                android:textSize="14sp"
                android:textColor="#666"
                android:drawableLeft="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="4dp"/>

            <TextView
                android:id="@+id/logSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  â€¢  1500 steps"
                android:textSize="14sp"
                android:textColor="#666"
                android:drawableLeft="@android:drawable/ic_menu_directions"
                android:drawablePadding="4dp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>