<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeColor="@android:color/white"
    app:strokeWidth="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:id="@+id/todayWorkoutImage"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_image_bg"
                android:contentDescription="Today's Workout Image" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/todayWorkoutTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Push Up"
                    android:textColor="@color/primaryBackground"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/todayWorkoutDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 Push up a day"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginBottom="8dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <ProgressBar
                        android:id="@+id/todayProgressBar"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="45"
                        android:progressDrawable="@drawable/progress_bar_green" />

                    <TextView
                        android:id="@+id/todayProgressText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="45%"
                        android:textSize="12sp"
                        android:textColor="#222"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/todayLevelBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intermediate"
            android:textSize="12sp"
            android:textColor="#fff"
            android:background="@drawable/badge_bg"
            android:backgroundTint="@color/primaryBackground"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView> 